<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../index.css" />
    <title>Airdropp</title>
  </head>
  <body>
    <div class="entireBody">
      <h1 class="brand">Airdropp</h1>

      <div id="joinRoom">
        <h2 id="label">Join a room to send or recieve a file</h2>
        <div class="flex">
          <input type="text" id="roomIdInput" placeholder="Enter Room ID" />
          <button id="joinBtn" onclick="joinRoom()">Join Room</button>
        </div>
      </div>
      <div class="userProfileContainer" id="userprofileContainer">
        <div class="userProfile" id="userprofile"></div>
        <div class="connectionLine">
          <div id="speedIndicator">0 kbps</div>
          <div class="thread" id="thread">
            <div id="progressBar"></div>
          </div>
          <div id="fileInfo" class="fileInfo">hello</div>
        </div>
        <div class="peerProfile" id="peerprofile"></div>
      </div>
      <div class="userNameDisplayContainer" id="usernamedisplayContainer">
        <div class="userNameDisplay" id="usernameDisplay">
          <p id="usernameLabel">
            You are popular as: <span id="username"></span>
          </p>
        </div>
        <div class="peerNameDisplay" id="peernameDisplay">
          <p id="peernameLabel">
            You are popular as: <span id="peerusername"></span>
          </p>
        </div>
      </div>
      <div class="mainContainerCenter">
        <div id="filesSent" class="filesSent">
          <p>Files Sent</p>
          <ol id="filesSentList"></ol>
        </div>
        <div class="mainContainer" id="maincontainer">
          <div class="drop-zone">
            <div class="icon-container">
              <img
                class="left-img"
                src="../images/file.svg"
                width="70px"
                alt=""
              />
              <img
                class="center-img"
                src="../images/file.svg"
                width="70px"
                alt=""
              />
              <img
                class="right-img"
                src="../images/file.svg"
                width="70px"
                alt=""
              />
            </div>
            <h2>
              Drag and drop or <span class="browse-span"> browse </span> a file.
            </h2>
            <input type="file" name="file" id="file-input" />
          </div>
        </div>
        <div id="recievedFiles" class="recievedFiles">
          <p>Files Recieved</p>
          <ol id="filesRecievedList"></ol>
        </div>
      </div>
    </div>
    <!-- Socket.IO Client Library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.1.3/socket.io.js"></script>
    <!-- Custom JavaScript -->
    <script src="../utils/username.js"></script>
    <script src="../index.js"></script>
  </body>
  <div class="toast-container" id="toast-container"></div>
</html>
