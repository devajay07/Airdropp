<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SpeedySend - Share and Receive Files</title>
    <!-- Add meta tags for SEO -->
    <meta
      name="description"
      content="SpeedySend allows you to quickly share and receive files with others. Join a room and start sending files securely and fast."
    />
    <meta
      name="keywords"
      content="SpeedySend, file sharing, receive files, send files, fast file transfer"
    />
    <meta name="author" content="Ajay Yadav" />

    <!-- Link to your CSS -->
    <link rel="stylesheet" href="../css/index.css" />

    <!-- Link to fontawesome cdn -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <!-- Google Analytics -->
    <script
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-1QZR7207EC"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-1QZR7207EC");
    </script>
  </head>
  <body>
    <header>
      <navbar id="navbar">
        <div id="left-nav"></div>
        <div id="center-nav"><h1 class="brand">SpeedySend</h1></div>
        <div id="right-nav">
          <a href="/guide" class="guideLink">How To Use?</a>
          <a class="infoBtn" id="infoBtn" href="/info"
            ><i class="fa-solid fa-circle-info fa-xl"></i
          ></a>
        </div>
      </navbar>
    </header>
    <div class="entireBody">
      <!-- Join Room Section -->
      <div id="joinRoom">
        <div class="centeredLabel">
          <h2 id="label">Join a room to send or receive a file</h2>
        </div>
        <div class="flex">
          <input
            type="text"
            id="roomIdInput"
            placeholder="Enter Room ID or Create one"
          />
          <button id="joinBtn" onclick="joinRoom()">Join Room</button>
        </div>
      </div>

      <!-- User Profile Section -->
      <div class="userProfileContainer" id="userprofileContainer">
        <div class="userProfile" id="userprofile"></div>
        <div class="connectionLine">
          <div id="speedIndicator">0 kbps</div>
          <div class="thread" id="thread">
            <div id="progressBar"></div>
          </div>
          <div id="fileInfo" class="fileInfo"></div>
        </div>
        <div class="peerProfile" id="peerprofile"></div>
      </div>

      <!-- User and Peer Name Display Section -->
      <div class="userNameDisplayContainer" id="usernamedisplayContainer">
        <div class="userNameDisplay" id="usernameDisplay">
          <p id="usernameLabel">
            You are popular as: <span id="username"></span>
          </p>
        </div>
        <div class="peerNameDisplay" id="peernameDisplay">
          <p id="peernameLabel">
            You are popular as: <span id="peerusername"></span>
          </p>
        </div>
      </div>

      <!-- Main Container -->
      <div class="mainContainerCenter">
        <!-- Files Sent Section -->
        <div id="filesSent" class="filesSent filesSentPhone">
          <p>Files Sent</p>
          <ol id="filesSentList"></ol>
        </div>

        <!-- File Drop Zone -->
        <div class="mainContainer" id="maincontainer">
          <div class="drop-zone">
            <h2><span class="browse-span">Choose</span> a file.</h2>
            <input type="file" name="file" id="file-input" />
          </div>
        </div>

        <!-- Files Received Section -->
        <div id="recievedFiles" class="recievedFiles">
          <p>Files Received</p>
          <ol id="filesRecievedList"></ol>
        </div>
      </div>
    </div>

    <!-- Socket.IO Client Library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.1.3/socket.io.js"></script>
    <!-- Custom JavaScript -->
    <script src="../utils/username.js"></script>
    <script src="../js/index.js"></script>

    <!-- Toast Container -->
    <div class="toast-container" id="toast-container"></div>
  </body>
</html>
